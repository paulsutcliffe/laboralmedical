<div id="main" role="main" class="not-front post show category-<%= @post.category_id %>">
	<section id="preface-top" >
    	<div class="container_16">
     		<div class="full-side">
               
             <div id="title-field">
				<div id="title-field-middle">
					<div id="title-field-inner">
				    	<h1><%= @post.title %></h1>
					</div>
				</div>
			</div>
            </div>
        </div>
	</section>

	<section id="content-top" class="bevel-1-bottom">
		
    	<article class="container_16">
	
        	<figure>
      		    
			<%= image_tag @post.picture(:regular) %>
   
            	</figure>
            
            <footer>
	
        	    
	
            </footer>
        </article>               
	</section>
    
    <section id="content" class="bevel-1-top">
    	<article class="container_16">
		 
      		    <p><%= notice %>
           		<%= sanitize(simple_format(@post.content), :tags => %w(p i br strong)) %>
		    </p>
        	
        	<footer>
        		<%= render 'sharing' %>
		
        	</footer>
        </article>

    </section>
    
    
</div>